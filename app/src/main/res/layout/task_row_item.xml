<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tskOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:baselineAligned="false"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tskType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO"
            android:paddingRight="@dimen/task_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tskOutputChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="C3"
            android:paddingRight="@dimen/task_item_right_padding"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tskStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:19"
            android:paddingRight="@dimen/task_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tskPwmOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="43%"
            android:paddingRight="@dimen/task_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tskEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="13:45"
            android:paddingRight="@dimen/task_item_right_padding"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tskPwmOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="99%"
            android:paddingRight="@dimen/task_item_right_padding"
            android:textColor="@android:color/black" />

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>